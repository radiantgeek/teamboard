<!DOCTYPE html>
<html>
<head>
  <title>Teamboard</title>

  <%= stylesheet_link_tag "application" %>

  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="topbar" data-scrollspy="scrollspy">
  <div class="topbar-inner">

    <div class="container">
      <a class="brand" href="/">Teamboard</a>
      <ul class="nav">
        <% quickLinks.each do |q| %>
            <li><a href="<%= q.link %>" target="_blank"><%= q.name %></a></li>
            <li> &nbsp; </li>
        <% end %>
      </ul>

      <form class="pull-left" name="quickbug" id="quickbug" action="<%= bugzillaUrl %>buglist.cgi" target="_blank">
        <input name="quicksearch" type="text" placeholder="Search @ bugzilla">
      </form>

      <a class="pull-right btn active" href="#">Synchronize</a>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="sidebar">
    <div class="well">
      <% tabMetrics.each do |t| %>
          <h5><a href="/<%=t.name%>/"><%= t.title %></a></h5>
          <ul>
            <% t.metrics.each do |m|
                 flag = (m.id == @metric.id) ? ' class="disabled"' : ''
            %>
            <li<%=raw flag%>><a href="/<%=t.name%>/<%=m.name%>/"><%= m.title %></a></li>
            <% end %>
          </ul>
      <% end %>

    </div>
  </div>

  <div class="content">
    <div class="row">
      <div class="span14">

        <%= yield %>

      </div>
    </div>

    <footer>
      <p>&copy; radiant</p>
    </footer>
  </div>
</div>
</body>
</html>