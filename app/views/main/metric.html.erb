<ul class="breadcrumb">
  <li><a href="/">Home</a> <span class="divider">/</span></li>
  <li><a href="/<%= @tab.name %>/"><%= @tab.title %></a> <span class="divider">/</span></li>
  <li class="active"><%= @metric.title %></li>
</ul>

<p><a class="btn primary" href="/<%= @tab.name %>/<%= @metric.name %>/link">List @ Bugzilla</a></p>

<p>
    <div id="plot_placeholder" class="thumbnail" style="height: 200px;"></div>
</p>

<table cellpadding="0" cellspacing="0" border="0" width="100%" class="display" id="release_table">
  <thead>
  <tr>
    <%= raw @columns.collect { |f| "<th>"+f.to_s+"</th>" }.join() %>
  </tr>
  </thead>
  <tbody>
  </tbody>
</table>


<script>
    $(document).ready(function () {
        installKeyPlot('plot_placeholder', ['/<%= @tab.name %>/<%= @metric.name %>']);

        $("#release_table").dataTable({
            "bJQueryUI":true,
            "bStateSave":true,
            "bLengthChange":false,
            "bAutoWidth":false,
            "sPaginationType":"full_numbers",
            "bPaginate":true,
            "bProcessing":true,
            "bServerSide":true,
            "sAjaxSource":"<%=@ajax%>"
        });
    });
</script>