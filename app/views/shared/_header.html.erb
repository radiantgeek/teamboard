<!DOCTYPE html>
<html>
<head>
  <title>Teamboard</title>

  <%= stylesheet_link_tag "application" %>

  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

</head>
<body>

<div class="topbar" data-scrollspy="scrollspy">
  <div class="topbar-inner">

    <div class="container">
      <a class="brand pull-left" href="/">Teamboard</a>
      <img id="ajax_loading" src="/images/ajax-loading.gif"/>

      <ul class="nav">
        <% quickLinks.each do |q| %>
            <li><a href="<%= q.link %>" target="_blank"><%= q.name %></a></li>
            <li> &nbsp; </li>
        <% end %>
      </ul>

      <form class="pull-left" name="quickbug" id="quickbug" action="<%= bugzillaUrl %>buglist.cgi" target="_blank">
        <input name="quicksearch" type="text" placeholder="Search @ bugzilla">
      </form>

      <ul class="nav pull-right">
        <li>
          <a id="sync" alt="/sync/" data-title="Synchronization" data-placement="below" rel="popover" href="#"><span class="label warning">Sync</span></a>
        </li>
      </ul>
    </div>
  </div>
</div>

<script type="text/javascript">
    $("#ajax_loading").ajaxStart(function () { $(this).show(); });
    $("#ajax_loading").ajaxStop(function () { $(this).hide(); });
</script>
